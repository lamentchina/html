light = rgba(0,0,0,0.8)
white = #fff
deep = #999
gray = #606061
active = #00d9ff

a.btn-dialog
  padding 5px
  border 1px solid blue
#dialog
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  background light
  z-index 99999
  opacity 0
  transition opacity 400ms ease-in
  pointer-events none
  &:target
    opacity 1
    pointer-events auto
  > div
    width 80%
    position relative
    margin 30% auto 0
    padding 5px 20px 13px 20px
    border-radius 10px
    background white
    background linear-gradient(white, deep)

.close
  background gray
  color white
  line-height 25px
  position absolute
  right -12px
  text-align center
  top -10px
  width 24px
  text-decoration none
  font-weight bold
  border-radius 12px
  box-shadow 1px 1px 3px #000
  &:active
    background active